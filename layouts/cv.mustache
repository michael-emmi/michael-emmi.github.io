<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset='utf-8'>
    <meta name="description" class="template" content="{{name}}: {{role}} / {{place}}">
    <link href='http://fonts.googleapis.com/css?family=IM+Fell+DW+Pica|IM+Fell+DW+Pica+SC|IM+Fell+Double+Pica|IM+Fell+Double+Pica+SC' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" media="screen" href="css/common.css">
    <link rel="stylesheet" media="screen" href="css/cv.css">
    <title>{{name}}</title>
  </head>

  <body>
    <section id="header">
      <h1 class="title">{{{name}}}</h1>
      <div class="tagline">{{{role}}}</div>
      {{#contact}}
        <div class="row">
          <div class="column left">
            <div class="item">{{{address}}}</div>
          </div>
          <div class="column right">
            <a href="{{web}}">{{web}}</a><br>
            <a href="mailto:{{email}}">{{email}}</a><br>
            {{#phone}}
              <a href="tel:{{number}}">{{number}}</a> ({{{country}}})<br>
            {{/phone}}
          </div>
        </div>
      {{/contact}}
    </section>

    <section id="about">
      <h2>About</h2>
      <div>
        {{{about}}}
      </div>
    </section>

    <section id="education">
      <h2>Education</h2>
      {{#education}}
        <div class="item">
          <span class="article-title">{{{degree}}}</span>{{#info}}, {{{.}}}{{/info}}.
          {{{where}}}, {{{when}}}.
        </div>
      {{/education}}
    </section>

    <section id="awards">
      <h2>Awards</h2>
      {{#awards}}
        <div class="item">
          <span class="article-title">{{{title}}}</span>. {{{source}}}, {{{when}}}.
        </div>
      {{/awards}}
    </section>

    <section id="positions">
      <h2>Employment</h2>
      {{#positions}}
        <div class="item">
          <span class="article-title">{{{title}}}</span>, {{{where}}}, {{{when}}}.
        </div>
      {{/positions}}
    </section>

    <section id="references">
      <h2>References</h2>
      {{#references}}
        <div class="item">
          <span class="article-title"><a href="{{web}}">{{{name}}}</a></span>, {{{title}}}, {{{where}}}.
        </div>
      {{/references}}
    </section>

    <section id="activities">
      <h2>Activities</h2>
      {{#activities}}
        <div class="item">
          <span class="article-title">{{{role}}}</span>.
          <span class="article-volume"><a href="{{URL}}">{{{desc}}}</a></span>
          ({{{acronym}}}).
        </div>
      {{/activities}}
    </section>

    <section id="publications">
      <h2>Publications</h2>
      {{#publications}}
        <div class="item">
          {{authors}}.
          <span class="article-title">
            {{#doi}}
              <a href="{{.}}">{{{title}}}</a>.
            {{/doi}}
            {{^doi}}
              {{{title}}}.
            {{/doi}}
          </span>
          In <span class="article-volume">{{{book}}}</span>
          ({{{acronym}}}){{#series}}, {{{.}}}{{/series}}{{#volume}}, volume {{{.}}}{{/volume}}{{#issue}}, issue {{{.}}}{{/issue}}{{#pages}}, pages {{{.}}}{{/pages}}.
          {{{publisher}}}, {{year}}.
          {{#pdf}}(<a href="{{.}}"><abbr>PDF</abbr></a>){{/pdf}}
        </div>
      {{/publications}}
    </section>

    <section id="software">
      <h2>Software</h2>
      {{#software}}
        <div class="item">
          <span class="article-title"><a href="{{URL}}">{{{name}}}</a></span>,
          {{{desc}}}
        </div>
      {{/software}}
    </section>

  </body>

</html>